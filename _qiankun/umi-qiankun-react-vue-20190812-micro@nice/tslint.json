{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "jsRules": {},
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "no-console": false,
    "arrow-parens": [
      "ban-single-arg-parens"
    ],
    "object-literal-sort-keys": false,
    "object-curly-spacing": [
      true,
      "always"
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "private-static-field",
          "public-static-field",
          "private-instance-field",
          "public-instance-field",
          "private-constructor",
          "public-constructor",
          "private-instance-method",
          "protected-instance-method",
          "public-static-method",
          "public-instance-method"
        ]
      }
    ],
    "max-classes-per-file": [
      true,
      10,
      "exclude-class-expressions"
    ],
    "no-unused-expression": true,
    "max-line-length": [
      true,
      140
    ],
    "interface-over-type-literal": false,
    "semicolon": [
      true,
      "always",
      "strict-bound-class-methods"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "always"
      }
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-namespace": [
      true,
      "allow-declarations"
    ]
  },
  "linterOptions": {
    "exclude": [
      "**/*.json"
    ]
  }
}
